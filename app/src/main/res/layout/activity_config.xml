<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:text="请输入相关设置保存"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白天设置时间:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/day_start_date_fee"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:clickable="true"
            android:text="07:00"
            android:textSize="20sp"
            android:maxLength="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="  至  " />
        <TextView
            android:id="@+id/day_end_date_fee"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#ededed"
            android:clickable="true"
            android:text="19:00"
            android:textSize="20sp"
            android:maxLength="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/free_price_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费分钟数:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/free_price_edit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="3"
            android:text="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/first_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/first_hour_edit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="3"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时收费" />
        <EditText
            android:id="@+id/first_yuan_edit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="3"
            android:text="1.5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />
        <EditText
            android:id="@+id/first_min_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="4"
            android:text="15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/after_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/after_hour_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时后"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/after_yuan_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="4"
            android:text="2.25" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />
        <TextView
            android:id="@+id/after_hour_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

    </LinearLayout>



    <View
        android:layout_width="fill_parent"
        android:layout_height="4px"
        android:background="@android:color/black" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晚上收费标准:"
            android:textSize="24sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/n_free_price_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费分钟数:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/n_free_price_edit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="4"
            android:text="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/n_first_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/n_first_hour_edit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="3"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时收费" />
        <EditText
            android:id="@+id/n_first_yuan_edit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="3"
            android:text="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />
        <EditText
            android:id="@+id/n_first_min_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="4"
            android:text="60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/n_after_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/n_after_hour_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时后"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/n_after_yuan_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:maxLength="4"
            android:text="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />
        <TextView
            android:id="@+id/n_after_hour_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="16dp"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/set_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定修改" />
    </LinearLayout>






    <TimePicker
        android:id="@+id/tpPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        ></TimePicker>
</LinearLayout>
